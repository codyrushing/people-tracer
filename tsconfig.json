{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["ES2019", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    // "noEmit": true,
    "rootDir": "./",
    "outDir": "./build"
    
  },
  "include": ["**/*.ts", "app/js/app.tsx", "app/js/app.tsx"],
  "exclude": [
    "node_modules/**/*",
    "build/**/*",
    ".vscode/**/*"
  ]
}